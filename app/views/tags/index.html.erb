<div class="w-full" >
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">All Tags</h1>
  </div>

  <div class="container-md">
  <table class='table table-striped table-info'>
    <thead>
      <tr>
        <th scope ="col">Name</th>
      </tr>
  </thead>
  <tbody>
    <div id="articles" class="min-w-full">
      <% @tags.each do |tag| %>
        <tr>
          <td>
          <%= tag.name %>
          </td>
        </tr>
      <% end %>
      </tbody>
  </table>
    </div>
</div><br ><br >

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= link_to "<< Back to Articles List",articles_path, class: "btn btn-outline-primary" %>
  </div>
