<h1>Articles Tagged With <%= @tag.name %></h1>
<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
    <%= link_to "<< Back to Article", article_path(article), class: "btn btn-primary" %>
    <%= link_to "Delete", tag_path(@tag), method: :delete, class: "btn btn-primary", data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete #{@tag.name}"} %>
  <% end %>
</ul>

