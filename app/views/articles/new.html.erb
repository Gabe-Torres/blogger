  <h1>create a new article</h1>

  <%= form_with model: @article do |f| %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %> <br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit "create article" %>
    </p>
    <% end %>
    
