
<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">All Articles</h1>
    <%= link_to "New Article", new_article_path, class: "btn btn-primary", data: {turbo_frame: "slide-over"} %>
  </div>

  <div id="articles" class="min-w-full">
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article_path(article),
        class: 'article-title', id: "article-#{article.id}" %>
      </li>
    <% end %>
    </div>
  </div><br ><br >

  <div class="flex items-center justify-between">
    <%= link_to "All Tags", tags_path, class: "btn btn-primary" %>
  </div>

<%= turbo_frame_tag "slide-over" %>