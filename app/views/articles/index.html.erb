
<div class="w-full">
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">My Articles</h1>
    <%= link_to "New Article", new_article_path, class: "btn btn-outline-primary", data: {turbo_frame: "slide-over"} %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
          <tr>
            <td>
              <%= link_to article.title, article_path(article),
              class: 'article-title', id: "article-#{article.id}" %>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>

  <div class="flex items-center justify-between">
    <%= link_to "All Tags", tags_path, class: "btn btn-outline-info" %>
  </div>

<%= turbo_frame_tag "slide-over" %>